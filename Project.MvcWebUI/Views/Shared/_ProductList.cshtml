@using Project.MvcWebUI.Models

@model IEnumerable<ProductModel>
<!-- Card deck with footers  -->
<div class="row">



    @foreach (var urun in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="col">
                <div class="card h-100">
                    <img src="~/Upload//@urun.Image" class="card-img-top" alt="@urun.Name">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/Home/Details/@urun.Id"> @urun.Name</a>
                        </h5>
                        <p class="card-text pt-2 description">
                        @urun.Description</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted product-price">
                            <i class="fa-solid fa-turkish-lira-sign"></i>
                            @urun.Price
                        </small>
                        <a href="/Home/Details/@urun.Id" class="btn btn-primary btn-sm float-end">
                            <i class="fa-solid fa-angles-right"></i>
                            Ürünü İncele
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }





</div>