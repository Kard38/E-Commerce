@model Project.MvcWebUI.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2>Sipariş Detay Bilgileri</h2>
            <hr />

            <dl class="row">

                <dt class="col-sm-3">Order State</dt>
                <dd class="col-sm-9">
                    @if (Model.OrderState==Project.MvcWebUI.Entity.EnumOrderState.Waiting)
                    {
                    <span class="badge text-bg-danger">@Model.OrderState</span>
                    }
                    else
                    {
                    <span class="badge text-bg-success">@Model.OrderState</span>
                    }

                </dd>

                <dt class="col-sm-3">Order Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Order Number</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">
                    <i class="fa-solid fa-turkish-lira-sign"></i>
                    @Model.Total
                </dd>

                <dt class="col-sm-3">Order Date</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>

                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">
                    <dl class="row">
                        @Model.AdresBasligi
                        <hr />
                        @Model.Adres
                        <br />
                        @Model.Sehir - @Model.Semt - @Model.Mahelle
                        <br />
                        @Model.PostaKodu
                    </dl>
                </dd>

                <dt class="col-sm-3">Products</dt>
                <dd class="col-sm-9">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th style="width:40%">Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th style="width:30%"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.OrderLines)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Upload/@item.Image" width="80" />
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>
                                        <i class="fa-solid fa-turkish-lira-sign"></i>
                                        @item.Price
                                    </td>
                                    <td>
                                        <a href="/Home/Details/@item.ProductId" class="btn btn-primary" target="_blank">
                                            <i class="fa-solid fa-angles-right"></i>
                                            Product Details
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </dd>

            </dl>


        </div>
    </div>
</div>

